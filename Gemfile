source 'https://rubygems.org'

# ให้ GitHub Pages ใช้เวอร์ชันของ jekyll และปลั๊กอินที่รองรับโดยตรง
gem 'github-pages', group: :jekyll_plugins

# ปลั๊กอินเพิ่มเติม (บางตัว GitHub Pages มีในตัวแล้ว แต่ระบุไว้ไม่เป็นไร)
group :jekyll_plugins do
  gem 'jekyll-feed'
  gem 'jekyll-sitemap'
  gem 'jekyll-redirect-from'
  gem 'jemoji'
  gem 'webrick', '~> 1.8'
  gem 'connection_pool', '2.5.0'
end
